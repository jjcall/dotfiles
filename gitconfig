[color]
  excludesfile = ~/.gitignore

[format]
  pretty = %Cblue%hCreset %Cgreen[%ar]%Creset (%an) %s

[diff]
  tool = diffmerge
  suppressBlankEmpty = true


[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false

[push]
  default = tracking

[branch]
  autosetupmerge = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

