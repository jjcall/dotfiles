[user]
	name = jason Calleiro
	email = jasoncalleiro@gmail.com

[color]
  ui = auto
  excludesfile = ~/.gitignore

[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan reverse
  branch = magenta

[format]
  pretty = %Cblue%hCreset %Cgreen[%ar]%Creset (%an) %s

[diff]
  tool = diffmerge
  suppressBlankEmpty = true

[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false

[push]
  default = tracking

[branch]
  autosetupmerge = true

[github]
  user = alikins

[core]
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
