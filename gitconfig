[user]
	name = jason Calleiro
	email = jasoncalleiro@gmail.com

[color]
  ui = auto
  excludesfile = ~/.gitignore
  interactive = true

[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan reverse
  branch = magenta

[sendemail]
  smtpencryption = tls
  smtpserver = smtp.gmail.com
  smtpuser = jasoncalleiro@gmail.com
  smtpserverport = 587

[format]
  pretty = %Cblue%hCreset %Cgreen[%ar]%Creset (%an) %s

[push]
  default = upstream 
  rebase = true

[branch]
	autosetupmerge = true

[github]
  user = alikins

[mergetool "vimdiff3"]
  cmd = vim -u ~/.vimrc -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[core]
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim

[alias]
  lg = !"git lg1"
  lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

  ours = checkout --ours
  theirs = checkout --theirs
  aours = "!f() { (git reset $* >/dev/null); git ours $* && git add $*; }; f"
  atheirs = "!f() { (git reset $* >/dev/null); git theirs $* && git add $*; }; f"

  res = reset
  resa = reset HEAD
  resh = "!f() { git stash && git reset --hard $@; }; f"
  cundo = reset HEAD^1


[help]
	autocorrect = 1
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
